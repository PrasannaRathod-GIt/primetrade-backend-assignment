{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,                    // Optional: enable for full TS safety
    "noImplicitAny": true,             // Ensures no accidental `any`
    "strictNullChecks": true,          // Better null safety

    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "types": ["vite/client", "react", "react-dom"]  // Add React types here
  },
  "include": ["src"]
}
